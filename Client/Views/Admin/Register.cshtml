@model API.DTOs.Auths.RegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutAuthentication";
}

<div class="account-pages w-100 mt-5 mb-5">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card mb-0">

                    <div class="card-body p-4">

                        <div class="account-box">
                            <div class="account-logo-box">
                                <div class="text-center">
                                    <a href="index.html">
                                        <img src="~/img/tWiz-Logo.png" alt="" height="30">
                                    </a>
                                </div>
                                <h5 class="mb-1 mt-4">Register</h5>
                                <p class="mb-0">Get access to tWiz System or <a asp-controller="Admin" asp-action="Login" class="text-dark ml-1"><b>Login Now!</b></a></p>
                            </div>

                            <div class="account-content mt-4">
                                <form class="form-horizontal" asp-action="Register">

                                    <div class="form-group row">
                                            <div class="col-12">
                                                <label asp-for="Name">Company Name</label>
                                                <input class="form-control" type="text" asp-for="Name" required="" placeholder="PT My Company">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>

                                    <div class="form-group row">
                                        <div class="col-6">
                                            <label asp-for="Email">Email Address</label>
                                            <input class="form-control" type="email" asp-for="Email" required="" placeholder="company@mail.com" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="col-6">
                                            <label asp-for="PhoneNumber">Phone Number</label>
                                            <input class="form-control" type="tel" asp-for="PhoneNumber" required="" placeholder="+82 347563487567">
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-12">
                                            <label asp-for="Address">Address</label>
                                            <input class="form-control" type="text" asp-for="Address" required="" placeholder="Address">
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-6">
                                            <label asp-for="Password">Password</label>
                                            <input class="form-control" type="password" required="" asp-for="Password" placeholder="Enter password">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div class="col-6">
                                            <label for="ConfirmPassword">Confirm Password</label>
                                            <input class="form-control" type="password" required="" asp-for="ConfirmPassword" placeholder="Confirm password">
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row d-none">
                                            <div class="col-12">

                                                    <div class="checkbox checkbox-success">
                                                        <input id="remember" type="checkbox">
                                                        <label for="remember">
                                                            I accept <a href="#">Terms and Conditions</a>
                                                        </label>
                                                    </div>

                                                </div>
                                    </div>

                                    <div class="form-group row text-center mt-2">
                                        <div class="col-12">
                                            <button class="btn btn-md btn-block waves-effect waves-light" type="submit" id="register-btns" style="background-color: #FD5F04">Register</button>
                                        </div>
                                    </div>

                                </form>

                                <div id="error-list" class="text-danger"></div>

                                <div class="row mt-4 pt-2 d-none">
                                    <div class="col-sm-12 text-center">
                                            <p class="text-muted">Already have tWiz Account?  <a asp-controller="Admin" asp-action="Login" class="text-dark ml-1"><b>Login Now!</b></a></p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
                <!-- end card-body -->
            </div>
            <!-- end card -->
    </div>
    <!-- end row -->
</div>
<!-- end container -->
</div>
<!-- end page -->