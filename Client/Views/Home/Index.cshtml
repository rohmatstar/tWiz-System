@{
    Layout = "_LayoutLanding";
    ViewData["Title"] = "tWiz - Corporate Events Arrangement";
}
<!-- ======== preloader ======== -->
<div class="preloader">
    <div class="loader">
        <div class="spinner">
            <div class="spinner-container">
                <div class="spinner-rotator">
                    <div class="spinner-left">
                        <div class="spinner-circle"></div>
                    </div>
                    <div class="spinner-right">
                        <div class="spinner-circle"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ======== header ======== -->
<header class="header">
    <div class="navbar-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg">
                        <a class="navbar-brand" href="#">
                            <h1 class="text-white"><img class="logo" src="landing/img/icon.png" alt="" />tWiz</h1>
                        </a>
                        <button class="navbar-toggler"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent"
                                aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse sub-menu-bar"
                                id="navbarSupportedContent">
                            <ul id="nav" class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a class="page-scroll active" href="#home">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="page-scroll" href="#features">Features</a>
                                </li>
                                <li class="nav-item">
                                    <a class="page-scroll" href="#about">About</a>
                                </li>

                                <li class="nav-item btn-wrapper border-start ps-5">
                                    <a asp-controller="Auth" asp-action="SignInAsEmployee" class="btn btn-sm bg-primary rounded-pill px-3 text-white">Sign in Employee</a>
                                </li>
                                <li class="nav-item btn-wrapper ms-2">
                                    <a asp-controller="Auth" asp-action="SignInAsCompany" class="btn btn-sm bg-primary rounded-pill px-3 text-white">Sign in Company</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>

<section id="home" class="hero-section">
    <div class="container">
        <div class="row align-items-center position-relative">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h2 class="wow fadeInUp text-white mb-4" data-wow-delay=".4s">
                        <span style="color: #fdd446;">tWiz</span>, Your Ultimate Corporate Events Partner!
                    </h2>
                    <p class="small wow fadeInUp" data-wow-delay=".6s">
                        At tWiz, we specialize in the seamless arrangement of corporate events that leave a lasting impression. Our unwavering commitment to excellence ensures that your business gatherings, conferences, and meetings are flawlessly executed, reflecting the highest standards of professionalism.
                    </p>
                    <a asp-controller="Auth" asp-action="SignUp"
                        class="main-btn btn-sm border-btn btn-hover wow fadeInUp"
                        data-wow-delay=".6s">Register Now!</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-img wow fadeInUp" data-wow-delay=".5s">
                    <img src="landing/img/hero/dashboard.png" alt="" style="display: block; width: 150%;" />
                </div>
            </div>
        </div>
    </div>
</section>

<section id="features" class="feature-section pt-120">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-8 col-sm-10">
                <div class="single-feature">
                    <div class="icon">
                        <i class="lni lni-handshake"></i>
                    </div>
                    <div class="content">
                        <h3>Expertise Beyond Compare</h3>
                        <p>
                            With years of industry experience, our dedicated team brings unmatched expertise to every event we handle.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-8 col-sm-10">
                <div class="single-feature">
                    <div class="icon">
                        <i class="lni lni-invention"></i>
                    </div>
                    <div class="content">
                        <h3>Crafting Success</h3>
                        <p>
                            Our meticulous planning and creative approach transform your vision into reality, crafting successful events that resonate with your brand.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-8 col-sm-10">
                <div class="single-feature">
                    <div class="icon">
                        <i class="lni lni-sprout"></i>
                    </div>
                    <div class="content">
                        <h3>Elevating Experiences</h3>
                        <p>
                            We believe that every corporate event should be a memorable experience. Our team goes above and beyond to create moments that inspire and engage.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="about" class="about-section pt-150">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-lg-6">
                <div class="about-img">
                    <img src="landing/img/hero/dashboard.png" alt="" class="w-100" />
                    <img src="landing/img/about/about-left-shape.png"
                            alt=""
                            class="shape shape-1" />
                    <img src="landing/img/about/left-dots.png"
                            alt=""
                            class="shape shape-2" />
                </div>
            </div>
            <div class="col-xl-6 col-lg-6">
                <div class="about-content">
                    <div class="section-title mb-30">
                        <h2 class="mb-25 wow fadeInUp" data-wow-delay=".2s">
                            Partner with tWiz for Corporate Events that Resonate
                        </h2>
                        <p class="wow fadeInUp" data-wow-delay=".4s">
                            Your corporate success is our priority. Choose tWiz for your corporate events and experience the art of precision in event management. Only for <strong>IDR 14,998,000</strong> With our affordable and competitive pricing, trust tWiz to deliver exceptional event management services without compromising on quality. Let's collaborate to create an unforgettable corporate event that leaves a lasting impact on your guests. Contact us today to discuss your event requirements and receive a personalized quote.
                        </p>
                    </div>
                    <a asp-controller="Auth" asp-action="SignUp"
                        class="main-btn btn-hover border-btn wow fadeInUp"
                        data-wow-delay=".6s">Register Now!</a>
                </div>
            </div>
        </div>
    </div>
</section>
    
<!-- ======== footer ======== -->
<footer class="footer">
    <div class="container">
        <div class="widget-wrapper">
            <div class="row">
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="footer-widget">
                        <div class="logo mb-30 text-center">
                            <a href="#">
                                <h1 class="text-white"><img class="logo" src="landing/img/icon-white.png" alt="" />tWiz</h1>
                            </a>
                        </div>
                        <p class="text-center mb-30 text-white">
                            Corporate Events Arrangement
                        </p>
                    </div>
                </div>

                <div class="col-xl-2 col-lg-2 col-md-6">
                    <div class="footer-widget">
                        <h3>About Us</h3>
                        <ul class="links">
                            <li><a href="#home">Home</a></li>
                            <li><a href="#features">Feature</a></li>
                            <li><a href="#about">About</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-xl-3 col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h3>Access</h3>
                        <ul class="links">
                            <li><a asp-controller="Auth" asp-action="SignInAsEmployee">Sign in as Employee</a></li>
                            <li><a asp-controller="Auth" asp-action="SignInAsCompany">Sign is as Company</a></li>
                            <li><a asp-controller="Auth" asp-action="SignUp">Sign up for Company</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

<a href="#" class="scroll-top btn-hover bg-primary">
    <i class="lni lni-chevron-up"></i>
</a>